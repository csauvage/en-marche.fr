{% extends 'adherent/layout.twig' %}

{% block adherent_profile_form %}

    <h3>Mot de passe</h3>

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_label(form.old_password, 'Mot de passe actuel') }}
        {{ form_errors(form.old_password) }}
        {{ form_widget(form.old_password, { attr: { placeholder: 'Entrez votre mot de passe actuel' } }) }}

        {{ form_label(form.password.first, 'Nouveau mot de passe') }}
        {{ form_errors(form.password.first) }}
        {{ form_widget(form.password.first, { attr: { placeholder: 'Entrez votre nouveau mot de passe' } }) }}

        {{ form_label(form.password.second, 'Nouveau mot de passe une deuxième fois') }}
        {{ form_widget(form.password.second, { attr: { placeholder: 'Ré-entrez votre nouveau mot de passe' } }) }}

        {{ form_widget(form.submit, { label: 'Enregistrer ce nouveau mot de passe' }) }}

    {{ form_end(form) }}

{% endblock %}
