{% extends 'base.html.twig' %}

{% block title "Édition du comité « #{committee.name} »" %}

{% block banner '' %}

{% block javascripts %}
    {% import 'javascript.js.twig' as js %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            {{ js.address(form.address) }}
        });
    </script>
{% endblock %}

{% block content %}
    <section class="l__wrapper--medium">
        <div class="committee">
            <h2>Édition des informations du comité</h2>

            <div class="l__row l__row--top l__row--h-stretch">
                <div class="committee__form">
                    <form method="post" id="edit-committee-form" class="form committee-form">
                        {{ include('committee/_form.html.twig') }}
                        <div>
                            <button type="submit" id="edit-committee">Enregistrer les modifications</button>
                        </div>
                        {{ form_rest(form) }}
                    </form>
                </div>

            </div>
        </div>
    </section>

    <section class="l__wrapper--medium">
        <div class="committee">
            {{ include('committee/hosts.html.twig') }}
        </div>
    </section>

{% endblock %}
