{% extends 'base.html.twig' %}

{% block banner '' %}

{% block content %}
    <main>
        <section class="register__interests content l__wrapper-500 b__nudge--bottom-huge">
            <header class="l__wrapper--slim space--60-0">
                <h1 class="text--center text--large">
                    Dîtes-nous en plus sur vos centres d'intérêt
                </h1>
            </header>
            <div class="adherent_pin_interests__form">
                {{ form_start(form, { attr: { class: 'form' } }) }}
                    {{ form_errors(form) }}

                    {{ form_widget(form.interests, { attr: { class: 'register__interests__options' } }) }}

                    <div class="register__interests__buttons l__row l__row--h-stretch l__mobile--col">
                        {{ form_widget(form.pass, { label: 'Passer cette étape'}) }}
                        {{ form_widget(form.submit, { label: 'Enregistrer', attr: { class: 'btn--primary' }  }) }}
                    </div>

                {{ form_end(form) }}
            </div>
        </section>
    </main>
{% endblock %}
